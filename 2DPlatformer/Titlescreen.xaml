<Page x:Name="Title_page" x:Class="_2DPlatformer.Titlescreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2DPlatformer"
      mc:Ignorable="d"
      Title="Titlescreen" Background="Black" Width="1024" Height="768">
    <Page.Resources>
        <FontFamily x:Key="futura">pack://application:,,,/Fonts/#futur</FontFamily>
    </Page.Resources>
    <Canvas x:Name="title_canvas" Width="1024" Height="768">
        <Image x:Name="title_background" Source="PNG/BackgroundMenu/MenuBackground.png" Height="768" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1"></Image>
        <Grid Height="768" Width="1024">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" Content="Start" Width="316" Click="Button_Click" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center" Height="275" BorderBrush="{x:Null}" FontFamily="{StaticResource futura}" Panel.ZIndex="3">
                <Button.Background>
                    <ImageBrush ImageSource="PNG/Button/10.png"/>
                </Button.Background>
            </Button>

            <Button FontFamily="{StaticResource futura}" Grid.Row="3" Content="Exit" Width="316" Click="Button_Click_1" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center" Height="275" BorderBrush="{x:Null}" Panel.ZIndex="3" >
                <Button.Background>
                    <ImageBrush ImageSource="PNG/Button/10.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Canvas>
</Page>
